<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register.GmailSetNickActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/wedo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:text="사용자 이름"
        android:textColor="#03A9F4"
        android:textSize="50dp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_profile_user" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/profileImageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="※WeDo에서 사용하실 프로필 사진을 찍어주세요." />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/setNickInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="13"
            android:hint="사용하실 이름"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/nickValidateButton"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#03A9F4"
            android:text="중복확인"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />


    </FrameLayout>

    <TextView
        android:id="@+id/nickRedundancyCheckText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:text="※WeDo에서 사용하실 이름을 입력해주세요." />

    <Button
        android:id="@+id/mainButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="#03A9F4"
        android:padding="15dp"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>